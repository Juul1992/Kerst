<body>

  <div id="lockscreen">
    <h1>Oeps! Je hebt kerstmuziek geactiveerd!</h1>
    <p>Wil je de muziek stoppen? Voer het wachtwoord in:</p>
    <input type="password" id="password" placeholder="Wachtwoord">
    <button onclick="checkPassword()">Ontgrendel de muziek</button>
  </div>

  <!-- YouTube video -->
  <iframe id="youtubePlayer" 
          src="https://www.youtube.com/embed/4N-yNyz7MYM?autoplay=1&loop=1&playlist=4N-yNyz7MYM" 
          allow="autoplay; encrypted-media">
  </iframe>

  <script>
    // Functie om het wachtwoord te controleren
    function checkPassword() {
      const password = document.getElementById("password").value;
      const correctPassword = "kerst2024"; // Het wachtwoord om de muziek te stoppen

      if (password === correctPassword) {
        document.getElementById("lockscreen").classList.add("hidden");
        // Verberg de YouTube-player (optioneel, gebruiker kan altijd het venster sluiten)
        document.getElementById("youtubePlayer").style.display = "none";
      } else {
        alert("Fout wachtwoord! Je moet blijven luisteren!");
      }
    }
  </script>

